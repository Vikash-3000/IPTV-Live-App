<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyApp.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <!--        this is used for remove white/black startup screen-->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <!-- Set background color -->
        <item name="android:windowBackground">@color/primary_background_dark</item>

        <!-- Set status and navigation bar colors -->
        <item name="android:statusBarColor">@color/primary_background_dark</item>
        <item name="android:navigationBarColor">@color/primary_background_dark</item>
    </style>


    <!-- themes.xml -->
    <style name="Theme.MyApp.NoSplash" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Set background color -->
        <item name="android:windowBackground">@color/primary_background_dark</item>

        <!-- Prevent transition animation between Splash and Main -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>